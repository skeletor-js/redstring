{
  "name": "redstring",
  "version": "0.1.0",
  "description": "Murder Accountability Project Case Analyzer - Desktop application for analyzing homicide data",
  "main": "dist-electron/main.js",
  "author": "Jordan Stella",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"BACKEND,ELECTRON\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:browser": "concurrently -n \"BACKEND,VITE\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev:backend\" \"vite --mode browser\"",
    "dev:backend": "cd backend && python3 -m uvicorn main:app --reload --port 5000",
    "dev:electron": "vite",
    "build": "npm run build:electron && npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:backend": "cd backend && ./venv/bin/pyinstaller build.spec",
    "package": "npm run build && electron-builder build --publish never",
    "package:mac": "npm run build && electron-builder build --mac --publish never",
    "package:win": "npm run build && electron-builder build --win --publish never",
    "package:linux": "npm run build && electron-builder build --linux --publish never",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "vitest run",
    "test:backend": "cd backend && pytest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"electron/**/*.ts\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-table": "^8.11.0",
    "@tanstack/react-virtual": "^3.0.1",
    "@types/leaflet": "^1.9.21",
    "@types/topojson-client": "^3.1.5",
    "axios": "^1.6.5",
    "leaflet": "^1.9.4",
    "leaflet.heat": "^0.2.0",
    "maplibre-gl": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "recharts": "^2.10.3",
    "topojson-client": "^3.1.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/leaflet.heat": "^0.2.5",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vitest": "^1.1.1"
  },
  "build": {
    "appId": "com.redstring.app",
    "productName": "Redstring",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend/dist/backend",
        "to": "backend/backend"
      }
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.py": [
      "cd backend && black",
      "cd backend && isort"
    ]
  }
}
